<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.com.cwi.nespresso_app">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.NespressoApp">
        <activity
            android:name=".products.acessories.AcessoriesActivity"
            android:exported="false" />
        <activity
            android:name=".products.machine.MachineActivity"
            android:exported="false" />
        <activity
            android:name=".bag.BagActivity"
            android:exported="false"
            android:label="@string/txt_bag" />
        <activity
            android:name=".favorites.FavoritesActivity"
            android:exported="false"
            android:label="@string/txt_favorites" />
        <activity
            android:name=".products.coffee.CoffeeActivity"
            android:exported="false" />
        <activity
            android:name=".products.ProductsActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.NespressoApp.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>